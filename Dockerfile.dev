# 开发环境 Dockerfile
FROM node:18-alpine

WORKDIR /app

# 更新包索引并安装系统依赖
RUN apk update && apk add --no-cache \
    python3 \
    py3-pip \
    make \
    gcc \
    g++ \
    musl-dev \
    vips-dev \
    pkgconfig \
    cairo-dev \
    pango-dev \
    glib-dev \
    jpeg-dev \
    giflib-dev \
    librsvg-dev \
    && rm -rf /var/cache/apk/*

# 设置 npm 镜像源
RUN npm config set registry https://registry.npmmirror.com

# 复制 package.json
COPY package*.json ./

# 安装所有依赖（包括开发依赖）
RUN npm install

# 复制应用代码
COPY . .

# 创建上传目录
RUN mkdir -p uploads/images

# 暴露端口
EXPOSE 3000

# 开发模式启动
CMD ["npm", "run", "dev"]